/* pages/newpage/newpage.wxss */

.search{
  width: 100%;
  height: 80rpx;
  /* background: red; */
  display: flex;
}
.search input{
  width: 96%;
  background: #fff;
  height: 80rpx;
  text-indent: 12rpx;
  position: relative;
  left: 2%;
  top:1%
}

.search icon{
  flex: 1;
  position: absolute;
  top: 2%;right: 6%;
}

.box{
  width: 100%;
  background:#fff;
}
.item{
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-bottom: 1px solid #999
}
.item image{
  width:150rpx;
  height: 150rpx;
  margin: 20rpx;
  margin-top: 0;
}
.item view{
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #999;
}
.foot{
  width: 100%;
  height: 80rpx;
  color: #333;
  font-size: 30rpx;
}
